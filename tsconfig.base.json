{
	"compilerOptions": {
		"skipLibCheck": true,
		"incremental": true,
		"strict": true,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"target": "ES2022",
		"moduleResolution": "node",
		"baseUrl": "src",
		"paths": {
			"@/*": ["*"]
		}
	},
	"exclude": ["node_modules", "dist", "build", "**/*.log"]
}
